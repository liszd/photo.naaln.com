.nav-toggle i
    font-size: 1.5em;
    color: #eee;
    padding: 1em 1em 0.6em;
    float: right;
    z-index: 1;
    position: relative;

nav.site-nav 
    position: relative;
    padding: 0;
    width: 100%;
    list-style: none;
    padding: 0 2em;
    box-sizing: border-box;

nav.site-nav ul
    margin: 0;
    padding: 0;

nav.site-nav li 
    width: auto;
    border-bottom: 2px solid transparent;
    padding-bottom: 3px;
    display: inline-block;


nav.site-nav li.on 
    color: #ccc;
    border-bottom-color: #ccc;

nav.site-nav li a 
    font-size: 1em;
    color: #eee;
    position: relative;
    z-index: 10;
    float: left;
    padding: 1em 1em 0.6em;
    text-transform: uppercase;
    font-weight: 400;
    line-height: 2em;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.14s ease-in-out;

.index-background 
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    padding: 0 0 40px;
    float: left;
    clear: both;
    width: 100%;
    z-index: -1;


.background-image 
    background-image: url('../img/background.jpg');
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;


.index-profile 
    width: 64%;
    margin-left: 18%;
    text-align: center;
    position: relative;
    margin-top: 50px;


.profile-img 
    border-radius: 50%;
    width: 10em;


.profile-name 
    font-size: 44px;
    font-family: font-verdana;
    font-weight: bold;
    color: color-white;
    letter-spacing: 2px;
    margin-top: 28px;
    line-height: 1.2;


.profile-motto 
    color: #eee;
    font-size: 20px;
    margin: 28px auto 0;
    line-height: 1.4;
    font-family: font-song;


.profile-social-menu 
    position: relative;
    padding: 0;
    width: 100%;
    list-style: none;
    margin-top: 18px;


.profile-social-menu li 
    margin-top: 10px;
    display: inline-block;
    width: 49px;
    padding: 0 3px;


.profile-social-menu li a 
    border-radius: 100%;


.profile-social-menu li a 
    background: color-white;
    color: color-grey;
    display: block;
    padding: 10px;
    font-size: 1em;


.profile-social-menu li a i 
    font-size: 20px;


.index-header 
    position: relative;
    float: left;
    width: 100%;
    height: 20%;

.index-header.first-index
    height: 100%;

.index-instagram 
    top: 0;
    position: fixed;
    text-align: left;
    width: 100%;
    height: 100%;
    display: none;

.instagram-img 
    position: relative;
    float: left;
    width: 25%;
    height: 0;
    padding-bottom: 25%;
    overflow: hidden;


.instagram-img div 
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-repeat: no-repeat;
    background-position: center center;
    transition: all 0.6s ease-out;
    -webkit-transform: scale(1);
    -ms-transform: scale(1);
    transform: scale(1);


.instagram-img div:hover 
    -webkit-transform: scale(1.2);
    -ms-transform: scale(1.2);
    transform: scale(1.2);