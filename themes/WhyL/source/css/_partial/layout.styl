html 
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
    height: 100%;
    font-family: font-layout


body 
    height: 100%;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    background: #f0f4f5;
    color: color-grey;


h1, h2, h3, h4, h5 
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 1px;
    line-height: 1.2;
    color: color-black;


a, u 
    text-decoration: none;
    color: color-black;

a:hover
    color: color-grey;